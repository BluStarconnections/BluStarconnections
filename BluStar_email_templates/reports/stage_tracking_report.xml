<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--report used while sending email-->
    <template id="template_report_stage_tracing_email">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-call="BluStar_email_templates.report_body"/>
                </div>
            </t>
        </t>
    </template>

    <!--report printing from print button in CRM-->
    <template id="template_report_stage_tracing">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="doc">
                        <t t-set="data" t-value="doc.get_report_vals()"/>
                        <t t-set="data_dict" t-value="data.get('data_dict')"/>
                        <t t-call="BluStar_email_templates.report_body"/>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="report_body">
        <t t-foreach="data_dict" t-as="item">
            <h3>
                <t t-esc="item"/>
            </h3>
            <table class="table" style="page-break-after:always">
                <thead>
                    <th>Lead title</th>
                    <th>Previous stage</th>
                    <th>New stage</th>
                </thead>
                <tbody>
                    <t t-foreach="data_dict[item]" t-as="data">
                        <tr>
                            <td t-esc="data.get('lead')"/>
                            <td t-esc="data.get('prev_stage')"/>
                            <td t-esc="data.get('new_stage')"/>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>

</odoo>