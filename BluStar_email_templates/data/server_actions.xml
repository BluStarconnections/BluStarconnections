<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_remove_duplicates" model="ir.actions.server">
            <field name="name">Remove duplicates</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="binding_model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                records.remove_duplicates()
            </field>
        </record>

        <record id="action_move_shadow_records" model="ir.actions.server">
            <field name="name">Move shadow records to 'Appointment Needed'</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="binding_model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                records.move_shadow_records()
            </field>
        </record>
    </data>
</odoo>