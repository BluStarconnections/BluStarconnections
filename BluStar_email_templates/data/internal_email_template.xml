<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="appointment_email_internal" model="mail.template">
            <field name="name">Internal Email</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="subject">Appointment scheduled, Awaiting Assignment {{object.to_user_timezone(object.next_appointment)}}</field>
            <field name="email_from">{{ object.user_id.email_formatted or user.email_formatted }}</field>
            <field name="email_to">info@blustarconnections.com</field>
            <field name="body_html" type="html">
                <p style="box-sizing:border-box;margin:0px 0 12px 0">Find below the appointment details,
                </p>
                <p style="box-sizing:border-box;margin:0px 0 12px 0">Appointment Date:
                    <t t-if="object.next_appointment">
                        <t t-out="object.to_user_timezone(object.next_appointment)"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box;margin:0px 0 12px 0">Name:
                    <t t-if="object.contact_first_name or object.contact_last_name">
                        <t t-out="object.contact_first_name"/>
                        <t t-out="object.contact_last_name"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Job Position:
                    <t t-if="object.function">
                        <t t-out="object.function"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Email:<![CDATA[ ]]>
                    <t t-if="object.primary_email">
                        <t t-out="object.primary_email"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Company:
                    <t t-if="object.partner_name" t-out="object.partner_name"/>
                    <t t-else="" t-out="object.name"/>,
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">EIN:<![CDATA[ ]]>
                    <t t-if="object.ein">
                        <t t-out="object.ein"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Address:<![CDATA[ ]]>
                    <t t-if="object.partner_id.street">
                        <t t-out="object.partner_id.street"/>,
                    </t>
                    <![CDATA[ ]]>
                    <t t-if="object.partner_id.city">
                        <t t-out="object.partner_id.city"/>,
                    </t>
                    <![CDATA[ ]]>
                    <t t-if="object.partner_id.state_id.name">
                        <t t-out="object.partner_id.state_id.name"/>,
                    </t>
                    <![CDATA[ ]]>
                    <t t-if="object.partner_id.zip">
                        <t t-out="object.partner_id.zip"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Phone:<![CDATA[ ]]>
                    <t t-if="object.contact_phone">
                        <t t-out="object.contact_phone"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Fund Manager:<![CDATA[ ]]>
                    <t t-if="object.fund_manager">
                        <t t-out="object.fund_manager"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">TPA:<![CDATA[ ]]>
                    <t t-if="object.tpa">
                        <t t-out="object.tpa"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Active Participants:<![CDATA[ ]]>
                    <t t-if="object.number_of_participants">
                        <t t-out="object.number_of_participants"/>,
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Assets:<![CDATA[ ]]>
                    <span style="color: #444b5a;font-size: 13px">
                        <t t-out="object.assets"/>
                    </span>
                    ,
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Advisor:<![CDATA[ ]]>
                    <t t-if="object.financial_advisor">
                        <t t-out="object.financial_advisor.name"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box;margin-bottom: 0px;">Comments for Appointment:<![CDATA[ ]]>
                    <t t-if="object.area_of_concern">
                        <t t-out="object.area_of_concern"/>
                    </t>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                    <span style="color: #222222;font-size: small">--</span>
                    <br/>
                    <img src="https://lh4.googleusercontent.com/2MQOuUTazilsG_PtCybrF8vJfciCPWfCaUCUwCSRs1SixHmfCoXbU51xFVa45v5XAkNsQY5CqoWIYVSD1fU76FYyakbEaKC5bm8t3N0JUC_GPUcdqoKH3zSn4FiJRrAxOvLt-U_h"
                         style="border-style:none;box-sizing:border-box;vertical-align:middle;width: 25%;" width="25%"
                         height="66"/>
                    <br/>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                    <b style="box-sizing:border-box;font-weight: 500;color: #00529b;font-size: x-small">
                        Better Relationships. Better Benefits.
                    </b>
                    <br/>
                </p>
                <p style="margin:0px 0 12px 0;box-sizing:border-box;">Production Team
                    <br/>
                    <a href="https://info@blustarconnections.com"
                       style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#008f8c;">
                        info@blustarconnections.com
                    </a>
                    <br/>407-309-2540
                    <br/>
                </p>
                <p style="box-sizing:border-box;margin-bottom: 0px;">
                    <br/>
                </p>
            </field>
        </record>
    </data>
</odoo>