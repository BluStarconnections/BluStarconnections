    <!--check app status and move records to cancel and confirm if needed-->
    <record id="check_app_status_in_crm" model="ir.cron">
        <field name="name">CRM: Check App Status</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">model.check_crm_app_status()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=2)).strftime('%Y-%m-%d 14:00:00')"/>
    </record>
    <!--check areacode and Move to dead area stage if no areacode found-->
    <record id="check_areacode_and_move_to_dead_area" model="ir.cron">
        <field name="name">CRM: Check areacode and move to dead area</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">model.check_areacode_and_move_to_dead_area()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>weeks</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=5)).strftime('%Y-%m-%d 02:00:00')"/>
    </record>

