<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="appointment_remainder_email_template" model="mail.template">
            <field name="name">Appointment Remainder Email</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="subject">Appointment Remainder</field>
            <field name="email_from">{{ object.user_id.email_formatted or user.email_formatted }}</field>
            <field name="email_to">zach@blustareview, blake@blustareview</field>
            <field name="body_html" type="html">
                <p style="box-sizing:border-box; margin:0px 0 12px 0; font-size:10px">This is reminder for below appointment.
                </p>
                <p style="box-sizing:border-box;  font-size:10px">Appointment Date:
                    <t t-if="object.next_appointment">
                        <t t-out="object.to_user_timezone(object.next_appointment)"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Name:
                    <t t-if="object.contact_first_name or object.contact_last_name">
                        <t t-out="object.contact_first_name"/>
                        <t t-out="object.contact_last_name"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Job Position:
                    <t t-if="object.function">
                        <t t-out="object.function"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Email:<![CDATA[ ]]>
                    <t t-if="object.primary_email">
                        <t t-out="object.primary_email"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Company:
                    <t t-if="object.partner_name" t-out="object.partner_name"/>
                    <t t-else="" t-out="object.name"/>,
                </p>
                <p style="box-sizing:border-box; font-size:10px">EIN:<![CDATA[ ]]>
                    <t t-if="object.ein">
                        <t t-out="object.ein"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Address:<![CDATA[ ]]>
                    <t t-if="object.partner_id.street">
                        <t t-out="object.partner_id.street"/>,
                    </t>
                    <![CDATA[ ]]>
                    <t t-if="object.partner_id.city">
                        <t t-out="object.partner_id.city"/>,
                    </t>
                    <![CDATA[ ]]>
                    <t t-if="object.partner_id.state_id.name">
                        <t t-out="object.partner_id.state_id.name"/>,
                    </t>
                    <![CDATA[ ]]>
                    <t t-if="object.partner_id.zip">
                        <t t-out="object.partner_id.zip"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Phone:<![CDATA[ ]]>
                    <t t-if="object.contact_phone">
                        <t t-out="object.contact_phone"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Fund Manager:<![CDATA[ ]]>
                    <t t-if="object.fund_manager">
                        <t t-out="object.fund_manager"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">TPA:<![CDATA[ ]]>
                    <t t-if="object.tpa">
                        <t t-out="object.tpa"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Active Participants:<![CDATA[ ]]>
                    <t t-if="object.number_of_participants">
                        <t t-out="object.number_of_participants"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Assets:<![CDATA[ ]]>
                    <span style="color: #444b5a;font-size: 10px">
                        <t t-out="object.assets"/>
                    </span>
                    ,
                </p>
                <p style="box-sizing:border-box; font-size:10px">Advisor:<![CDATA[ ]]>
                    <t t-if="object.financial_advisor">
                        <t t-out="object.financial_advisor.name"/>,
                    </t>
                </p>
                <p style="box-sizing:border-box;margin-bottom: 0px; font-size:10px">Comments for Appointment:
                    <![CDATA[ ]]>
                    <t t-if="object.area_of_concern">
                        <t t-out="object.area_of_concern"/>
                    </t>
                </p>
                <p style="box-sizing:border-box; font-size:10px">
                    <span style="color: #222222;font-size: 10px">--</span>
                    <br/>
                    <img src="https://lh4.googleusercontent.com/2MQOuUTazilsG_PtCybrF8vJfciCPWfCaUCUwCSRs1SixHmfCoXbU51xFVa45v5XAkNsQY5CqoWIYVSD1fU76FYyakbEaKC5bm8t3N0JUC_GPUcdqoKH3zSn4FiJRrAxOvLt-U_h"
                         style="border-style:none;box-sizing:border-box;vertical-align:middle;width: 25%;" width="10%"
                         height="40"/>
                    <br/>
                </p>
                <p style="box-sizing:border-box; font-size:10px">
                    <b style="box-sizing:border-box;font-weight: 500;color: #00529b;font-size: 10px">
                        Better Relationships. Better Benefits.
                    </b>
                    <br/>
                </p>
                <p style="box-sizing:border-box; font-size:10px">Production Team
                    <br/>
                    <a href="https://info@blustarconnections.com"
                       style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#008f8c; font-size:10px">
                        info@blustarconnections.com
                    </a>
                    <br/>407-309-2540
                    <br/>
                </p>
                <p style="box-sizing:border-box;margin-bottom: 0px; font-size:10px">
                    <br/>
                </p>
            </field>
        </record>
    </data>
</odoo>