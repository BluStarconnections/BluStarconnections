<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--	Wizard for upload CSV file to import Products -->
    <record id="import_csv_form_wizard" model="ir.ui.view">
        <field name="name">import.csv.form.wizard</field>
        <field name="model">blustar.import.csv.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="csv_file"/>
                    <field name="model_name"/>
                    <field name="stage_id" required="True" widget="selection"/>
                    <field name="appt_status" required="True"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="import_csv" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="blustar_imports_via_wizard" model="ir.actions.act_window">
        <field name="name">Upload CSV</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">blustar.import.csv.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="blustar_menu_import_data"
              name="Import data"
              parent="crm.crm_menu_root"
              sequence="21"
              action="blustar_data_import.blustar_imports_via_wizard"/>

</odoo>